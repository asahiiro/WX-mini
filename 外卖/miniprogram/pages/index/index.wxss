.container {
  padding: 20rpx;
}

.banner {
  width: 100%;
  height: 350rpx;
  margin-bottom: 20rpx;
}

.banner swiper {
  width: 100%;
  height: 100%;
}

.dishes {
  margin-bottom: 20rpx;
}

.dish-item {
  display: flex;
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
}

.dish-info {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.dish-name {
  font-size: 32rpx;
  font-weight: bold;
}

.dish-price {
  color: #ff4d4f;
  margin: 10rpx 0;
}

.dish-desc {
  color: #666;
  font-size: 28rpx;
}

.reserve-btn {
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
}