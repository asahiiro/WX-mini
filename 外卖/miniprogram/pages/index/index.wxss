.page-container {
  height: 100vh;
  background: linear-gradient(180deg, #FFF3E0, #FFE8CC);
}

.banner-swiper {
  width: 94%;
  height: 360rpx;
  margin: 20rpx auto;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid #FF6F00;
}

.banner-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.dish-section {
  padding: 20rpx 30rpx;
}

.section-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin: 20rpx 0;
  display: block;
}

.dish-scroll {
  white-space: nowrap;
  width: 100%;
}

.dish-list {
  display: inline-flex;
}

.dish-card {
  width: 300rpx;
  margin-right: 20rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s, box-shadow 0.3s;
}

.dish-card:hover {
  transform: translateY(-8rpx);
  box-shadow: 0 12rpx 24rpx rgba(0, 0, 0, 0.15);
}

.dish-image {
  width: 100%;
  height: 220rpx;
  object-fit: cover;
}

.dish-info {
  padding: 20rpx;
}

.dish-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.dish-price {
  font-size: 28rpx;
  color: #FF6F00;
  font-weight: bold;
  display: block;
  margin-bottom: 12rpx;
}

.dish-desc {
  font-size: 24rpx;
  color: #666;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.intro-section {
  padding: 20rpx 30rpx;
}

.intro-card {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.1);
  padding: 30rpx;
  animation: fadeIn 0.5s ease-in-out;
}

.intro-image {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  object-fit: cover;
}

.intro-text {
  font-size: 32rpx;
  color: #333;
  line-height: 48rpx;
}

.combo-section {
  padding: 20rpx 30rpx 40rpx;
}

.combo-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.combo-card {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.1);
  padding: 30rpx;
  animation: fadeIn 0.5s ease-in-out;
}

.combo-name {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.combo-price {
  font-size: 32rpx;
  color: #FF6F00;
  font-weight: bold;
  margin-bottom: 16rpx;
  display: block;
}

.combo-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 40rpx;
}

.reserve-button {
  width: 80%;
  margin: 40rpx auto;
  background: linear-gradient(90deg, #FF6F00, #FFA040);
  color: #fff;
  font-size: 34rpx;
  border-radius: 60rpx;
  padding: 24rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  transition: transform 0.2s, opacity 0.2s;
}

.reserve-button:hover {
  transform: scale(1.05);
  opacity: 0.95;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}