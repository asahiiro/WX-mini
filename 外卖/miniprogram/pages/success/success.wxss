.success-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF3E0, #FFE8CC);
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.success-card {
  width: 90%;
  background: #fff;
  border-radius: 24rpx;
  padding: 48rpx;
  text-align: center;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
  animation: slideIn 0.5s ease-in-out;
}

.success-icon {
  font-size: 100rpx;
  color: #FF6F00;
  margin-bottom: 32rpx;
}

.success-text {
  font-size: 44rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  display: block;
}

.success-hint {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 48rpx;
  display: block;
}

.back-button {
  width: 100%;
  background: linear-gradient(90deg, #FF6F00, #FFA040);
  color: #fff;
  font-size: 34rpx;
  border-radius: 60rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  transition: transform 0.2s, opacity 0.2s;
}

.back-button:hover {
  transform: scale(1.05);
  opacity: 0.95;
}

@keyframes slideIn {
  from {
    transform: translateY(50rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}