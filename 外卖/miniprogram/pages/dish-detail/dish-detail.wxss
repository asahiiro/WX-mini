.detail-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF3E0, #FFE8CC);
  display: flex;
  justify-content: center;
  padding: 40rpx;
}

.detail-card {
  width: 90%;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
  animation: fadeIn 0.5s ease-in-out;
}

.detail-image {
  width: 100%;
  height: 500rpx;
  object-fit: cover;
}

.detail-info {
  padding: 40rpx;
}

.detail-name {
  font-size: 44rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  display: block;
}

.detail-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF6F00;
  margin-bottom: 24rpx;
  display: block;
}

.detail-desc {
  font-size: 32rpx;
  color: #666;
  line-height: 48rpx;
}

.button-group {
  padding: 0 40rpx 40rpx;
}

.reserve-button {
  width: 100%;
  background: linear-gradient(90deg, #FF6F00, #FFA040);
  color: #fff;
  font-size: 34rpx;
  border-radius: 60rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  transition: transform 0.2s, opacity 0.2s;
}

.reserve-button:hover {
  transform: scale(1.05);
  opacity: 0.95;
}

.back-button {
  width: 100%;
  background: #F5F5F5;
  color: #FF6F00;
  font-size: 34rpx;
  border-radius: 60rpx;
  padding: 24rpx;
  border: 2rpx solid #FF6F00;
  transition: background 0.2s;
}

.back-button:hover {
  background: #FFE8CC;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}