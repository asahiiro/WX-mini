/* pages/task/task.wxss */
.task-page {
  padding: 20rpx;
}

.task-info {
  background: white;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.info-item {
  margin-bottom: 20rpx;
}

.label {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.value {
  font-size: 28rpx;
  color: #333;
}

.edit-btn {
  margin: 20rpx;
  background-color: #07c160;
  color: white;
  border-radius: 10rpx;
  padding: 20rpx;
}