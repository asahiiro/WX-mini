.task-page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 40rpx 28rpx 28rpx;
  box-sizing: border-box;
}

.task-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-item {
  background: linear-gradient(180deg, rgba(220, 234, 255, 0.9), rgba(220, 234, 255, 0.85));
  padding: 20rpx;
  border-radius: 14rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  animation: fadeIn 0.3s ease;
  display: flex;
  flex-direction: column;
}

.label {
  font-size: 28rpx;
  font-weight: 600;
  color: #1E3A8A;
  margin-bottom: 12rpx;
}

.value {
  font-size: 26rpx;
  color: #034cd7 !important;
  background: none !important;
  -webkit-background-clip: none !important;
  background-clip: none !important;
}

.value.completed {
  color: #A0AEC0 !important;
  text-decoration: line-through;
}

.remark-input {
  width: 100%;
  min-height: 100rpx;
  max-height: 200rpx;
  overflow-y: auto;
  background: rgba(255, 255, 255, 0.8);
  border: 2rpx solid #4682B4;
  border-radius: 10rpx;
  padding: 16rpx;
  font-size: 26rpx;
  color: #034cd7 !important;
  background: none !important;
  -webkit-background-clip: none !important;
  background-clip: none !important;
  box-sizing: border-box;
}

.remark-input:focus {
  border-color: #034cd7;
  box-shadow: 0 0 8rpx rgba(3, 76, 215, 0.3);
}

.button-group {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-top: 20rpx;
}

.save-remark-btn, .edit-btn {
  width: 320rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.save-remark-btn {
  background: linear-gradient(180deg, #034cd7 0%, #1E90FF 100%);
  color: #FFFFFF;
  border: none;
}

.edit-btn {
  background: rgba(255, 255, 255, 0.3);
  color: #FFFFFF;
  border: 2rpx solid #034cd7;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(8rpx); }
  to { opacity: 1; transform: translateY(0); }
}