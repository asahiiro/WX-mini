/* pages/task/task.wxss */
.task-page {
  padding: 20rpx;
}

.task-info {
  background: white;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.info-item {
  margin-bottom: 20rpx;
}

.label {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.value {
  font-size: 28rpx;
  color: #333;
}

.remark-input {
  width: 100%;
  height: 100rpx;
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
  padding: 10rpx;
  font-size: 28rpx;
}

.save-remark-btn, .edit-btn {
  margin: 20rpx;
  background-color: #07c160;
  color: white;
  border-radius: 10rpx;
  padding: 20rpx;
}

.save-remark-btn {
  background-color: #1890ff; /* Blue to distinguish from edit button */
}