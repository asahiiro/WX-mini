/* pages/list/list.wxss */
.list-page {
  min-height: 100vh;
  padding: 20rpx;
  padding-bottom: 120rpx; /* 为悬浮按钮预留空间 */
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
}

.edit-icon {
  font-size: 40rpx;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: none;
  justify-content: center;
  align-items: center;
}

.modal.show {
  display: flex;
}

.modal.hide {
  display: none;
}

.modal-content {
  background: white;
  padding: 20rpx;
  border-radius: 10rpx;
  width: 80%;
  position: relative;
}

.close-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  font-size: 40rpx;
}

.confirm-btn {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  font-size: 40rpx;
  color: #07c160;
}

.modal-item {
  margin: 20rpx 0;
}

.modal-item text {
  display: block;
  margin-bottom: 10rpx;
}

input, picker {
  border: 1rpx solid #ccc;
  padding: 10rpx;
  border-radius: 8rpx;
}

radio-group {
  display: flex;
  gap: 20rpx;
}

/* 新增悬浮按钮样式 */
.float-btn {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #07c160;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}