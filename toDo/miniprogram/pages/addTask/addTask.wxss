.task-page {
  min-height: 100vh;

  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.form {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 40rpx 28rpx 80rpx;
  gap: 16rpx;
}

.form-item {
  background: linear-gradient(180deg, rgba(220, 234, 255, 0.9), rgba(220, 234, 255, 0.85));
  padding: 20rpx;
  border-radius: 14rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  animation: fadeIn 0.3s ease;
}

.label {
  font-size: 28rpx;
  color: #1E3A8A;
  font-weight: 600;
  margin-bottom: 12rpx;
  display: block;
}

.input {
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.8);
  border: 2rpx solid #4682B4;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #1E3A8A;
}

.input:focus {
  border-color: #034cd7;
  box-shadow: 0 0 8rpx rgba(3, 76, 215, 0.3);
}

.picker {
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.8);
  border: 2rpx solid #4682B4;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.picker-content {
  color: #1E3A8A;
  text-align: center;
}

.radio-group, .checkbox-group {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  margin-top: 8rpx;
}

.radio-label, .checkbox-label {
  font-size: 26rpx;
  color: #64748B;
  display: flex;
  align-items: center;
  padding: 8rpx 12rpx;
}

radio, checkbox {
  margin-right: 8rpx;
}

radio .wx-radio-input,
checkbox .wx-checkbox-input {
  border: 2rpx solid #4682B4;
  background: transparent;
  width: 36rpx;
  height: 36rpx;
  border-radius: 8rpx;
}

radio .wx-radio-input.wx-radio-input-checked,
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border-color: #034cd7;
  background: #034cd7;
}

.custom-days {
  padding-left: 20rpx;
  margin-top: 16rpx;
  animation: fadeIn 0.3s ease;
}

.save-btn {
  width: 400rpx;
  margin: 20rpx auto;
  padding: 20rpx;
  background: linear-gradient(180deg, #034cd7 0%, #1E90FF 100%);
  color: #FFFFFF;
  font-size: 32rpx;
  border-radius: 12rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border: none;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(8rpx); }
  to { opacity: 1; transform: translateY(0); }
}