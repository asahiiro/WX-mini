/* pages/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
  background: linear-gradient(180deg, #DBEAFE 0%, #FFFFFF 100%); /* Fallback background */
}

.list-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.list-item {
  display: flex;
  align-items: center;
  width: 90%;
  max-width: 600rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9); /* Transparent white */
  border: 1rpx solid #BFDBFE; /* Light blue border */
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease;
}

.list-item-hover {
  transform: scale(1.02);
}

.list-icon {
  font-size: 40rpx;
  color: #6B7280; /* Gray-blue */
  margin-right: 20rpx;
}

.list-name {
  font-size: 32rpx;
  color: #1E3A8A; /* Deep blue */
  font-weight: 500;
}

.empty-state {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #6B7280;
}

.create-btn {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #1E3A8A; /* Deep blue */
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  opacity: 0.9;
  transition: transform 0.2s ease, background 0.2s ease;
}

.create-btn-hover {
  transform: scale(0.95);
  background: #3B82F6; /* Lighter blue */
}