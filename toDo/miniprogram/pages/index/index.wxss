.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 28rpx;
  box-sizing: border-box;
  background: linear-gradient(180deg, #002a9a 0%, #034cd7 100%);
}

.list-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 28rpx;
}

.list-item {
  display: flex;
  align-items: center;
  width: 90%;
  max-width: 600rpx;
  padding: 24rpx;
  background: linear-gradient(180deg, rgba(220, 234, 255, 0.9), rgba(220, 234, 255, 0.85));
  border: 1rpx solid #4682B4;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.15);
  animation: fadeIn 0.3s ease;
  position: relative;
}

.list-item-hover {
  transform: scale(1.02);
}

.list-icon {
  font-size: 44rpx;
  background: linear-gradient(180deg, #64748B 0%, #ADD8E6 100%);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  color: #64748B; /* 回退颜色 */
  margin-right: 24rpx;
}

.list-name {
  font-size: 34rpx;
  background: linear-gradient(180deg, #1E3A8A 0%, #034cd7 100%);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  color: #1E3A8A; /* 回退颜色 */
  font-weight: 600;
  flex: 1;
}

.delete-btn {
  font-size: 36rpx;
  background: linear-gradient(180deg, #FF6B6B 0%, #DC143C 100%);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  color: #FF6B6B; /* 回退颜色 */
  position: absolute;
  right: 24rpx;
  padding: 8rpx;
  border-radius: 10rpx;
}

.delete-btn:hover {
  transform: scale(1.1);
}

.empty-state {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 34rpx;
  background: linear-gradient(180deg, #1E3A8A 0%, #034cd7 100%);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  color: #1E3A8A; /* 回退颜色 */
  background: linear-gradient(180deg, rgba(220, 234, 255, 0.9), rgba(220, 234, 255, 0.85));
  border-radius: 16rpx;
  padding: 48rpx;
  margin: 28rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.15);
  animation: fadeIn 0.3s ease;
}

.create-btn {
  position: fixed;
  bottom: 48rpx;
  right: 48rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  color: #FFFFFF; /* 白色文字 */
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 52rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.2);
  border: 2rpx solid #034cd7;
  transition: transform 0.2s ease, background 0.2s ease, box-shadow 0.2s ease;
}

.create-btn-hover {
  background: rgba(255, 255, 255, 0.4);
  transform: scale(1.05);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.25);
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10rpx); }
  to { opacity: 1; transform: translateY(0); }
}