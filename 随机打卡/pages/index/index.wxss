/* 顶部导航栏 */
.header {
  width: 100%;
  height: 100rpx;
  background: #2c5e9e;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  top: 0;
  z-index: 10;
}

.logo {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 0;
}

/* 主容器 */
.container {
  height: 100vh;
  background: #f0f4f8 url('https://data-wyzmv.kinsta.page/image/sunny1.png') no-repeat center;
  background-size: cover;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 120rpx; /* 避开顶部导航栏 */
}

/* 结果卡片 */
.card {
  width: 80%;
  background: #ffffff;
  border-radius: 20rpx;
  border: 2rpx solid #e0e6f0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 60rpx;
  animation: fadeIn 0.5s ease-in;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
}

.card-item {
  width: 100%;
  display: flex;
  justify-content: center;
  margin: 10rpx 0; /* 上下间距 */
}

.building-name {
  font-size: 48rpx;
  color: #2c5e9e;
  font-weight: bold;
}

.desc {
  font-size: 28rpx;
  color: #888;
}

.distance {
  font-size: 32rpx;
}

/* 按钮区域 */
.btn-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.btn-item {
  width: 100%;
  display: flex;
  justify-content: center;
  margin: 10rpx 0; /* 上下间距 */
}

.shake-icon {
  width: 60rpx;
  height: 60rpx;
  animation: shake 1s infinite;
}

.shake-btn {
  width: 240rpx;
  height: 100rpx;
  line-height: 100rpx;
  background: linear-gradient(45deg, #2c5e9e, #4a90e2);
  color: #fff;
  font-size: 36rpx;
  border-radius: 50rpx;
  transition: all 0.3s;
}

.shake-btn:active {
  transform: scale(0.95);
  background: linear-gradient(45deg, #4a90e2, #2c5e9e);
}

/* 动画 */
@keyframes fadeIn {
  0% { opacity: 0; filter: blur(5px); }
  100% { opacity: 1; filter: blur(0); }
}

@keyframes shake {
  0% { transform: rotate(0deg); }
  25% { transform: rotate(10deg); }
  75% { transform: rotate(-10deg); }
  100% { transform: rotate(0deg); }
}