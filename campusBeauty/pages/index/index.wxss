/* pages/index/index.wxss */
.vertical-swiper {
  height: 100vh;
  width: 100%;
}

/* 首页样式 */
.home-page {
  height: 100%;
  width: 100%;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.home-bg-image {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  opacity: 0.9;
  z-index: 1;
}

.title {
  font-size: 60rpx;
  font-family: 'STXingkai', serif;
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
  z-index: 2;
}

/* 花卉页面样式 */
.flower-page {
  height: 100%;
  width: 100%;
  position: relative;
  overflow: hidden;
}

.bg-image {
  position: absolute;
  width: 150%;
  height: 150%;
  top: -25%;
  left: -25%;
  filter: blur(10rpx);
  opacity: 0.8;
}

.flower-content {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}

.horizontal-swiper {
  width: 90%;
  height: 60vh;
  margin: 0 auto;
}

.flower-image {
  width: 100%;
  height: 60vh;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.2);
  object-fit: cover;
}

.flower-name {
  margin-top: 40rpx;
  font-size: 40rpx;
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  text-align: center;
}

.flower-desc {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #eee;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  text-align: center;
}

/* 音乐图标样式 */
.music-icon {
  position: fixed;
  bottom: 40rpx;
  left: 40rpx;
  width: 80rpx;
  height: 100rpx;
  z-index: 10;
}

.music-icon image {
  width: 100%;
  height: 100%;
}

.rotate-icon {
  animation: rotate 4s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* 音乐控制面板样式 */
.music-panel {
  position: fixed;
  bottom: 130rpx;
  left: 50rpx;
  width: 500rpx;
  z-index: 20;
}

.panel-content {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}

/* 关闭按钮 */
.close-icon {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  font-size: 40rpx;
  color: #333;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  cursor: pointer;
}

/* 当前播放歌曲 */
.current-track {
  display: flex;
  align-items: center;
  width: 100%;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ddd;
}

.track-cover {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.track-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.track-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.track-controls {
  display: flex;
  align-items: center;
}

.play-pause-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.progress-bar {
  flex: 1;
}

/* 其他歌曲列表 */
.music-list {
  width: 100%;
  max-height: 200rpx;
  overflow-y: auto;
  margin-top: 20rpx;
}

.music-item {
  display: block; /* 确保每首歌占一行 */
  width: 100%;
  font-size: 28rpx;
  padding: 10rpx;
  text-align: left;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; /* 防止文本换行 */
}

.music-item.active {
  color: #ff6f61;
  font-weight: bold;
}