@font-face {
  font-family: 'Pixel';
  src: url('https://data-wyzmv.kinsta.page/font/ark-pixel-font-12px/ark-pixel-12px-monospaced-zh_cn.ttf');
}

/* 外层容器占满屏幕 */
.container {
  height: 100vh;
  width: 100vw;
  overflow: hidden;
  margin: 0;
  padding: 0;
}

/* Swiper 占满整个屏幕 */
.swiper-container {
  width: 100vw;
  height: 100vh;
  margin: 0;
  padding: 0;
}

/* 确保 swiper-item 也占满屏幕 */
swiper-item {
  width: 100vw;
  height: 100vh;
  margin: 0;
  padding: 0;
}

/* 菜单页面占满屏幕 */
.menu-page {
  width: 100vw;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0;
  padding: 0;
  font-family: 'Pixel';
  background-size: cover;
  background-position: center;
  transition: background-image 0.5s ease, color 0.5s ease;
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  background: rgba(0, 0, 0, 0.5);
  position: relative;
  z-index: 1;
}

/* 主页面占满屏幕 */
.main-page {
  width: 100vw;
  height: 100vh;
  background-color: rgb(255, 255, 255);
  position: relative;
  margin: 0;
  padding: 0;
}

/* 菜单内容区域 */
.menu-content {
  padding: 0 40rpx;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  width: 100%;
  margin: 0;
  position: relative;
  z-index: 2;
}

.menu-header {
  font-size: 50rpx;
  font-weight: bold;
  text-align: center;
}

.menu-item {
  font-size: 40rpx;
  padding: 20rpx;
  border-bottom: 1rpx solid #555;
  text-align: center;
}

/* 风向风力开关样式 */
.wind-switch {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  padding: 20rpx;
  font-size: 40rpx;
  border-bottom: 1rpx solid #555;
}

/* 主题选择列表 */
.theme-picker {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.8);
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 80%;
  max-height: 80vh;
  overflow-y: auto;
  z-index: 3;
}

.theme-option {
  font-size: 36rpx;
  padding: 20rpx;
  text-align: center;
  color: #fff;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 10rpx;
}

/* 菜单按钮 */
.menu-btn {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  font-size: 50rpx;
  color: #333;
  z-index: 10;
}

/* Scroll-view 占满屏幕 */
.scroll-container {
  font-family: 'Pixel';
  width: 100vw;
  height: 100vh;
  margin: 0;
  padding: 0;
}

/* 加载提示 */
.loading {
  height: 100vh;
  width: 100vw;
  display: flex;
  justify-content: center;
  align-items: center;
  color: black;
  font-size: large;
  margin: 0;
  padding: 0;
}

/* 主页面和次页面占满屏幕 */
.page1, .page2 {
  width: 100vw;
  height: 100vh;
  background-size: cover;
  background-position: center;
  transition: background-image 0.5s ease, color 0.5s ease;
  margin: 0;
  padding: 0;
}

.page1 {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.divider {
  height: 2rpx;
  background-color: #ccc;
  margin: 0;
  width: 100vw;
}

/* 图标大小 */
.icon1 { height: 200rpx; width: 200rpx; }
.icon2 { height: 150rpx; width: 150rpx; }
.icon3 { height: 100rpx; width: 100rpx; }

/* 主内容区域 */
.main-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  width: 100vw;
  margin: 0;
  padding: 0;
}

/* 天气信息样式 */
.temp { font-size: 200rpx; }
.temprange { font-size: 40rpx; }
.weather { font-size: 50rpx; }
.location { font-size: 40rpx; }
.week { font-size: large; }
.wind { font-size: large; }
.reporttime { font-size: large; }

/* 天气预报容器 */
.forecast-container {
  display: flex;
  justify-content: space-around;
  gap: 5rpx;
  width: 100vw;
  margin: 0;
  padding: 0;
}

.forecast {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
  border-radius: 20rpx;
  background-color: #00000000;
  backdrop-filter: blur(1rpx);
  width: 30%;
}

/* 其他天气信息容器 */
.other-container {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 20rpx;
  width: 100vw;
  margin: 0;
  padding: 20rpx 0;
}

.each-day {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 40rpx;
  border: none;
  border-radius: 20rpx;
  backdrop-filter: blur(5rpx);
  transition: background-color 0.5s ease;
  width: 45%;
}

.day, .night {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 10rpx;
}

