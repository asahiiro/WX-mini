/* pages/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.character {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.message {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.input {
  width: 80%;
  height: 80rpx;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.button {
  width: 60%;
  height: 80rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.reset {
  background-color: #ff4444;
}