/* pages/index/index.wxss */
/* 公共样式保持不变 */
.container {     
  position: relative;
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  justify-content: flex-start;
}

.background {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.chat-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 10rpx;
  margin-top: auto;
}

.character {
  width: 400rpx;
  height: 600rpx;
  margin-top: 0rpx; 
}

.icon {
  height: 100rpx;
  width: 100rpx;
  
}

.icon-container:active .icon {
  transform: translateY(5rpx) scale(0.9); 
  transition: transform 0.2s ease; 
}

.character-container {
  display: inline-block;
  transition: transform 0.3s ease; 
}

.character-active {
  transform: translateY(-20rpx); 
}

.character-container:active {
  transition: transform 0.3s ease; 
  transform: translateY(-10rpx); 
}

/* 定义两个主题的样式类 */
.theme-light .chat-bubble {
  padding: 20rpx; 
  max-width: 80%;
  height: auto;
  text-align: center;
  position: relative;
  color: rgb(255, 255, 255);
  font-size: 32rpx;
  background: none;
  border-color: rgb(255, 0, 0); /* 当前主题边框颜色 */
  border-style: dashed;
  border-radius: 20rpx;
  transition: all 0.1s ease; 
}

.theme-dark .chat-bubble {
  padding: 20rpx; 
  max-width: 80%;
  height: auto;
  text-align: center;
  position: relative;
  color: rgb(255, 255, 255);
  font-size: 32rpx;
  background: none;
  border-color: #ff7b00; /* 深蓝色边框 */
  border-style: dashed;
  border-radius: 20rpx;
  transition: all 0.1s ease; 
}

.chat-bubble:active {
  color: rgb(255, 255, 255);
  background-color: #ffffff25;
  transform: translateY(3rpx) scale(0.96);
  box-shadow: 0 10px 12px rgba(0,0,0,0.2);
}

.chat-bubble-active {
  animation: bubbleAnimate 0.3s ease-in-out;
}

@keyframes bubbleAnimate {
  0% { transform: scale(1); }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

.theme-light .chat-bubble::after {
  content: '';
  position: absolute;
  bottom: -40rpx; 
  left: 50%;
  transform: translateX(-50%);
  border: 10rpx solid transparent;
  border-top-color: rgb(255, 0, 0); /* 当前主题三角颜色 */
}

.theme-dark .chat-bubble::after {
  content: '';
  position: absolute;
  bottom: -40rpx; 
  left: 50%;
  transform: translateX(-50%);
  border: 10rpx solid transparent;
  border-top-color: #ff7b00; /* 深蓝色三角 */
}

.theme-light .input {
  width: 80%;
  height: 80rpx;
  border:  dashed rgb(255, 0, 0);
  color: rgb(255, 255, 255);
  border-radius: 10rpx;
  padding: 0 20rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.theme-dark .input {
  width: 80%;
  height: 80rpx;
  border: dashed #ff7b00;
  color: white;
  border-radius: 10rpx;
  padding: 0 20rpx;
  text-align: center;
  margin-bottom: 30rpx;
}
.input:active{
  transform: translateY(-2rpx) scale(1.1);
  transition: all 0.1s ease;   
}

.theme-light .normal {
  width: 60%;
  height: 80rpx;
  background: none;
  color: rgb(255, 255, 255);
  border-color: rgb(255, 0, 0); /* 当前主题边框颜色 */
  border-style: dashed;
  font-size: 32rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  transition: all 0.1s ease; 
}

.theme-dark .normal {
  width: 60%;
  height: 80rpx;
  background: none;
  color: rgb(255, 255, 255);
  border-color: #ff7b00;
  border-style: dashed;
  font-size: 32rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  transition: all 0.1s ease; 
}

.normal:active {
  color: rgb(255, 255, 255);
  background-color: #ffffff38;
  transform: translateY(3rpx) scale(0.96);
  box-shadow: 0 10px 12px rgba(0,0,0,0.2);
}
