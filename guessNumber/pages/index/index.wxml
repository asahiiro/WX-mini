<!--pages/index/index.wxml-->
<view class="container">
  <!-- 人物头像 -->
  <image class="character" src="/images/character.png"></image>
  
  <!-- 提示消息 -->
  <view class="message">{{message}}</view>
  
  <!-- 输入框 -->
  <input class="input" type="number" placeholder="请输入1-100之间的数字" bindinput="inputGuess" value="{{guess}}" />
  
  <!-- 提交按钮 -->
  <button class="button" bindtap="checkGuess">提交猜测</button>
  
  <!-- 重置按钮 -->
  <button class="button reset" bindtap="resetGame">重新开始</button>
</view>